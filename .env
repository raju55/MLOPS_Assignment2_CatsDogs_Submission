# =========================================================
# Application (Cats vs Dogs - Assignment 2)
# =========================================================
APP_NAME=catsdogs-api
APP_ENV=local
LOG_LEVEL=INFO

# =========================================================
# FastAPI / Uvicorn
# =========================================================
API_HOST=0.0.0.0
API_PORT=8000

# =========================================================
# Model (default local weights inside submission zip)
# =========================================================
MODEL_WEIGHTS_PATH=models/catsdogs_cnn.pt

# =========================================================
# Optional: MLflow Configuration (docker-compose / k8s)
# =========================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_MODEL_NAME=cats-dogs
MLFLOW_MODEL_STAGE=Production

# =========================================================
# Model Load Behavior
# =========================================================
MODEL_LOAD_RETRY=true
MODEL_LOAD_RETRY_SECONDS=20

# =========================================================
# Prometheus / Monitoring
# =========================================================
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics

# =========================================================
# Kubernetes (optional clarity)
# =========================================================
SERVICE_NAME=catsdogs-api
NAMESPACE=catsdogs-mlops
